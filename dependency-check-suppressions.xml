    <!-- ✅ DEVELOPMENT/TEST ONLY DEPENDENCIES -->
    <suppress>
        <notes><![CDATA[
        Test containers are only used in test scope and don't affect production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.testcontainers/.*@.*$</packageUrl>
        <vulnerabilityName>CVE-2021-29425</vulnerabilityName>
    </suppress>
    
    <!-- ✅ GRADLE WRAPPER (if applicable) -->
    <suppress>
        <notes><![CDATA[
        Gradle wrapper vulnerabilities are typically build-time only
        ]]></notes>
        <filePath regex="true">.*gradle-wrapper\.jar</filePath>
    </suppress>
    
